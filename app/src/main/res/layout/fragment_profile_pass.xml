<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentProfilePass">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvProfilePass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Old Password"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etProfilePass1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="************"
            android:autofillHints="password"
            android:background="@drawable/content_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfilePass1" />

        <TextView
            android:id="@+id/tvProfilePass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="New Password"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfilePass1" />

        <EditText
            android:id="@+id/etProfilePass2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="************"
            android:autofillHints="password"
            android:background="@drawable/content_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfilePass2" />

        <TextView
            android:id="@+id/tvProfilePass3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Confirmation Password"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfilePass2" />

        <EditText
            android:id="@+id/etProfilePass3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="************"
            android:autofillHints="password"
            android:background="@drawable/content_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfilePass3" />

        <Button
            android:id="@+id/btnProfilePass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/main_theme"
            android:text="Change Password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfilePass3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>